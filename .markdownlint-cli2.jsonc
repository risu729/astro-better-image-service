{
	// ref: https://github.com/DavidAnson/markdownlint-cli2?tab=readme-ov-file#configuration
	"$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint-cli2/main/schema/markdownlint-cli2-config-schema.json",
	"config": {
		// ignore line length because I don't want to wrap my text
		"line-length": false,
		"no-hard-tabs": {
			"code_blocks": false
		}
	},
	"gitignore": true,
	"globs": ["**/*.md"]
}
